<?xml version="1.0" encoding="UTF-8"?>

<!-- 검색전후 레코드 개수 -->
    <select id="noti_count" parameterType="page" resultType="int">
      select count(bbs_no) from notice
      <where>
       <if test="find_field == ''"></if> <!-- 검색조건이 없어서 검색을 안한 경우라서 총레코드 개수 -->
       <if test="find_field == 'bbs_title'"> <!-- 제목 기준으로 검색한 경우 -->
        bbs_title like #{find_name} <!-- like는 SQL문에서 ~와 비슷한 문자를 검색하는 검색연산자 키워드 -->
       </if>
       <if test="find_field == 'bbs_cont'"> <!-- 내용기준으로 검색한 경우 -->
        bbs_cont like #{find_name}
       </if>
      </where>
    </select>